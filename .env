# Wolfe Trading Desk Configuration
# This file overrides settings from config/default.yaml

# Executor Mode - Options: DRY_RUN, SHADOW, LIVE
EXECUTOR_MODE=SHADOW

# Node ID for HA setup
NODE_ID=EX-44-PRIMARY

# Environment - Options: dev, test, prod
ENV=prod

# Redis Configuration (for HA)
REDIS_HOST=localhost
REDIS_PORT=6379

# Dashboard Configuration
DASH_PORT=9090
DASH_TOKEN=change-me-to-secure-token

# Risk Management Settings
DAILY_HARD_DD_PCT=0.04
DAILY_SOFT_FREEZE_PCT=0.038
ORDER_RATE_CAP_PER_60S=150

# Watchlist - JSON array format for pydantic-settings compatibility
# If you want to override the watchlist from YAML, uncomment and modify:
# WATCHLIST=["EURUSD","USDCHF","NZDUSD","AUDCAD","CADCHF","EURAUD","EURCAD","EURCHF","NZDCAD","NZDCHF"]

# Nuclear Security (Prague TZ for FTMO compliance)
PRAGUE_TZ=Europe/Prague
NUCLEAR_PUBKEY=

# Feature Flags
FEATURES_HA_DRILLS=false
FEATURES_AUTO_FLAT_ALL_ON_LOCK_LOSS=true
FEATURES_HA_STATUS_BADGE=true
FEATURES_AUTO_REGISTER_MT5=false
FEATURES_GAP_GUARD=true
FEATURES_RISK_ADAPTER=true

# Risk Mode Configuration
RISK_MODE=ratchet
RISK_FLOOR_PCT=0.25
RISK_CEILING_PCT=1.50

# Correlation Settings
CORR_WINDOW_DAYS=20
CORR_BLOCK_THRESHOLD=0.70
CORR_THRESHOLD_ACTION=block
DXY_BAND_PCT=0.002

# Gap Alert
GAP_ALERT_PCT=0.15